<?xml version="1.0"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
        http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">
   <component>
      <component-type>com.corejsf.Chart</component-type>
      <component-class>javax.faces.component.UIOutput</component-class>
   </component>

   <render-kit>
      <renderer>
         <component-family>javax.faces.Output</component-family>
         <renderer-type>com.corejsf.Chart</renderer-type>
         <renderer-class>com.corejsf.ChartRenderer</renderer-class>
      </renderer>
   </render-kit>

   <managed-bean> 
      <managed-bean-name>planets</managed-bean-name>
      <managed-bean-class>com.corejsf.Planets</managed-bean-class> 
      <managed-bean-scope>session</managed-bean-scope> 
   </managed-bean>
   
   <lifecycle>
     <phase-listener>com.corejsf.BinaryPhaseListener</phase-listener> 
   </lifecycle>

</faces-config>
